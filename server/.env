# Directus 配置
KEY="your-random-key-here"
SECRET="your-random-secret-here"

# 資料庫配置（SQLite 範例）
DB_CLIENT="sqlite3"
DB_FILENAME="./data.db"

# 或使用 PostgreSQL
# DB_CLIENT="pg"
# DB_HOST="localhost"
# DB_PORT="5432"
# DB_DATABASE="directus"
# DB_USER="postgres"
# DB_PASSWORD="password"

# 伺服器配置
HOST="127.0.0.1"
PORT="3000"
PUBLIC_URL="http://localhost:3000"

# CORS 配置
CORS_ENABLED="true"
CORS_ORIGIN="http://localhost:5173"

# 認證配置
ACCESS_TOKEN_TTL="15m"
REFRESH_TOKEN_TTL="7d"